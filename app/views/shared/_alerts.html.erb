<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Steven James Portfolio", time: 2000) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Steven James Portfolio", time: 2000) %>
<% else %>
	<%= js add_gritter(flash[:notice], title: "Steven James Portfolio", time: 2000) %>
<% end %>